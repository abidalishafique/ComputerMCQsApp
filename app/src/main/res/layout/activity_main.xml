<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242627"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="#F2F0F6"
        android:text="Welcome to My Computer Quiz"
        android:textColor="#0A090B"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="163dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mypic" />

    <Button
        android:id="@+id/startbtn"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="341dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:background="#C9CDC5"
        android:text="Start Quiz"
        android:textColor="#514B4B"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="GotoFirstMCQ"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="363dp"
        android:layout_height="132dp"
        android:layout_marginTop="36dp"
        android:text="Purpose of this Quiz: \n\n  1)Check Your Basic Computer Knowledge\n  2)Working of Computer\n  3)History of Computer"
        android:textColor="#F3EBEB"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>